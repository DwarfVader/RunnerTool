<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:RunnerTool">
	<Color x:Key="DarkGray">#444444</Color>
	<SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}" />

	<Color x:Key="VeryDarkGray">#222222</Color>
	<SolidColorBrush x:Key="VeryDarkGrayBrush" Color="{StaticResource VeryDarkGray}" />

	<Color x:Key="VeryDarkGrayTransparent">#cc222222</Color>
	<SolidColorBrush x:Key="VeryDarkGrayBrushTransparent" Color="{StaticResource VeryDarkGrayTransparent}" />

	<Color x:Key="LightGray">#dddddd</Color>
	<SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}" />

	<!-- background colors -->
	<SolidColorBrush x:Key="GreenBackgroundBrush" Color="LightGreen" />
	<SolidColorBrush x:Key="CyanBackgroundBrush" Color="Aquamarine" />
	<SolidColorBrush x:Key="BlueBackgroundBrush" Color="LightSteelBlue" />
	<SolidColorBrush x:Key="YellowBackgroundBrush" Color="LightYellow" />

	<!-- destination colors -->
	<SolidColorBrush x:Key="DestinationDrBrush" Color="LightSalmon" />
	<SolidColorBrush x:Key="DestinationShopBrush" Color="LightCyan" />
	<SolidColorBrush x:Key="DestinationOtherBrush" Color="LightGoldenrodYellow" />

</ResourceDictionary>